

<p id="notice"></p>
<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>User info</h2>

    <% if @user.errors.any? %>
     <div id="error_explanation">
      <%= @user.errors.count %>errors prohibited this obj from being saved:
      <% @user.errors.full_messages.each do |message| %>
      <div><%= message %></div>
      <% end %>
     </div>
      <% end %>

   <%= form_with model:@user, local:true do |f| %>
    <div><label for="inputName">Name</label></div>
    <div class="form-group"><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"name" , class:"form-control name" %></div>

     <label for="inputImage">Image</label><br>
     <div class="form-group"><%= f.attachment_field :profile_image, placeholder: "Profile" %></div>

    <div><label for="inputIntro">Introduction</label></div>
    <div class="form-group"><%= f.text_area :introduction, autofocus: true, id:"inputIntro", placeholder:"introduction" , class:"form-control introduction" %></div>
    <div class="form-group"><%= f.submit "Update User" , class:"btn btn-secondary" %></div>
   <% end %>
  </div>
 </div>
</div>
