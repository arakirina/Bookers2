<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <divclass="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag current_user, :profile_image, size: "50x50", fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do  %>
           <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h1>New Book</h1>
        <%= form_with model: @newbook, local:true do |f| %>
          <h4>title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <%= f.submit 'Create Book' %>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>

                <%= link_to user_path do %>
                 <%= attachment_image_tag @book.user, :profile_image, size: "40x40" , fallback: "no_image.jpg" %>
                <% end %>

                <%= @book.title %>
                <%= @book.body %>

              </td>
            </tr>
          </tbody>
        </table>
      </div>
     </div>
    </div>
   </main>









