<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag current_user, :profile_image, size: "50x50", fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>name</th>
              <th><%= @user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do  %>
           <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
        <h1>New Book</h1>
        <%= form_with model: @newbook, local:true do |f| %>
          <h4>title</h4>
          <%= f.text_field :title %>
          <h4>Opinion</h4>
          <%= f.text_area :body %>
          <div class="form-group">
            <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
          </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user_id) do %>
                 <%= attachment_image_tag @book.user, :profile_image, size: "40x40" , fallback: "no_image.jpg" %>
                 <br>
                 <%= @book.user.name %>
                <% end %></td>

                <td><%= link_to @book.title , book_path(@book.id) %></td>

                <td><%= @book.body %></td>

              <td>
                <% if @user.id == current_user.id %>
                 <%= link_to "Edit" , edit_book_path , class:"btn btn-sm btn-success" %>
                 <%= link_to "Destroy" , book_path(@book), method: :delete ,  "data-confirm" => "本当に消しますか？" , class:"btn btn-sm btn-danger" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
     </div>
    </div>
   </main>









